# Evolution API Configuration
# The API key is a value YOU define - Evolution API doesn't generate it for you.
# For local development: use any simple value (e.g., "dev-key", "test-key")
# For production: generate a secure random key using: openssl rand -hex 32
EVOLUTION_API_KEY=your_api_key_here

# Evolution API Logging
# Optional: Controls verbosity of Evolution API logs
# Available levels: ERROR, WARN, INFO, DEBUG, LOG, VERBOSE, DARK, WEBHOOKS
# Default: INFO
EVOLUTION_LOG_LEVEL=INFO

# wa2ai Configuration
# Optional: Enable detailed debug logging in wa2ai router
# Default: false
WA2AI_DEBUG=false

# Baileys Configuration
# Optional: Directory to store Baileys authentication state
# Default: ./auth_info_baileys
# Note: This directory will be created automatically and should not be committed to git
WA2AI_BAILEYS_AUTH_DIR=./auth_info_baileys
